<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhaCelula.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Minha Célula"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="EmailTextBox" Text="{Binding Email, Mode=TwoWay}"></Entry>
            <Entry x:Name="PasswordTextBox" Text="{Binding Password, Mode=TwoWay}"></Entry>
            <Button x:Name="LoginButton" Text="Login" Command="{Binding LoginCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>